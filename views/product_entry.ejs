    </div>
  </aside>
  <div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">
            <i></i>Product(s) / Product Entry</h1>
          </div>
        </div>
      </div>
    </div>
    <section class="content">
      <div class="container-fluid">
        <% if(msg != ''){ %>
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= msg%>
          </div>
          <%}else if(dangermsg != ''){%>
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= dangermsg%>
            </div>
            <%}%>
          <div class="row">
              <div class="col-md-12 col-sm-12">
                  <div class="card card-default">
                      <form action="/save_product" method="post" autocomplete="off">
                      <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xl-4 line-height">
                                <h6>Date</h6>
                                <h6>Brand</h6>
                                <h6>Model</h6>
                                <h6>Motor Type</h6>
                                <h6>Color</h6>
                                <h6>CC</h6>
                                <h6>Engine Number</h6>
                                <h6>Chasis Number</h6>
                                <h6>Total Price</h6>
                            </div>
                            <div class="col-md-4 col-sm-8 col-xl-8">
                                <div class="form-group">
                                  <div class="input-group">
                                    <input type="text" id="e_date"name="date" class="form-control" readonly />
                                  </div>
                                  
                                    <div class="input-group">
                                      <select class="form-control" name="brand" id="brand" required></select>
                                    </div>
                                    <div class="input-group">
                                      <input list="modal"class="form-control" name="model" required>  
                                      <datalist id="modal"></datalist>
                                    </div>
                                    <div class="input-group">
                                      <input list="motor_type"class="form-control" name="motor_type" required>  
                                      <datalist id="motor_type"></datalist>
                                    </div>
                                      <div class="input-group">
                                        <input list="color"class="form-control" name="color" required>  
                                        <datalist id="color"></datalist>
                                      </div>
                                      <div class="input-group">
                                        <input list="cc"class="form-control" name="cc" required>  
                                        <datalist id="cc"></datalist>
                                    </div>
                                    
                                    <div class="input-group">
                                      <input type="text" class="form-control"name="engine_number" required />
                                    </div>
                                    <div class="input-group">
                                      <input type="text" class="form-control"name="chasis_number" required />
                                    </div>
                                    <div class="input-group">
                                      <input type="number" class="form-control"name="total"value="<%= (typeof productInfo !=  'undefined')? productInfo[4]: ''%>" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                      </div>
                      <div class="card-footer"align="center">
                        <button type="submit" class="btn btn-warning">Add Product</button>
                      </div>
                      </form>
                    </div>
              </div>
          </div>
      </div>
    </section>
  </div>
  <footer class="main-footer">
    <strong>Copyright 2020 | All Rights Reserved to BISMILLAH AUTOS | Developed by</strong>
    <a href="url"><img src="/public/images/MWlogo.png"style="width:9%;"></a>
 </footer>
</div>
<script src="/public/plugins/jquery/jquery.min.js"></script>
<script src="/public/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
<script src="/public/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/public/dist/js/adminlte.min.js"></script>
<script>
    $(function () {
    var d = new Date();
    var month = d.getMonth()+1;
    var day = d.getDate();
    var output = ((''+day).length<2 ? '0' : '') + day+'/'+
    ((''+month).length<2 ? '0' : '') + month + '/' + d.getFullYear();
    $('#e_date').val(output)
    $.get('/getBikeBrand', (data)=>{
      if(data.length > 0){
        $.each(data, (index)=>{
          $('#brand').append('<option value="'+data[index].brand_name+'">'+data[index].brand_name+'</option>')
        })
      }
    })
    $.get('/getBikeModel', (data)=>{
      if(data.length > 0){
        $.each(data, (index)=>{
          $('#modal').append('<option value="'+data[index].model+'">')
        })
      }
    })
    $.get('/getBikeMotorType', (data)=>{
      if(data.length > 0){
        $.each(data, (index)=>{
          $('#motor_type').append('<option value="'+data[index].motor_type+'">')
        })
      }
    })
    $.get('/getBikeColor', (data)=>{
      if(data.length > 0){
        $.each(data, (index)=>{
          $('#color').append('<option value="'+data[index].color+'">')
        })
      }
    })
    $.get('/getBikeCC', (data)=>{
      if(data.length > 0){
        $.each(data, (index)=>{
          $('#cc').append('<option value="'+data[index].CC+'">')
        })
      }
    })
    $('[name=model]').val("<%= (productInfo !=  '')? productInfo[0]: ''%>")
    $('[name=motor_type]').val("<%= (productInfo !=  '')? productInfo[1]: ''%>")
    $('[name=color]').val("<%= (productInfo !=  '')? productInfo[2]: ''%>")
    $('[name=cc]').val("<%= (productInfo !=  '')? productInfo[3]: ''%>")
  });
	</script>
</body>
</html>
    <script>
    $(function () {
    var d = new Date();
    var month = d.getMonth()+1;
    var day = d.getDate();
    var output = ((''+day).length<2 ? '0' : '') + day+'/'+
    ((''+month).length<2 ? '0' : '') + month + '/' + d.getFullYear();
    $('.date').val(output)
  $('#cash').on('keyup',function(){
    var balance=$('#balance').val()
    var cash = $('#cash').val()
    var remaining_balance = (balance-cash)
    $('#remaining_balance').val(remaining_balance)
  })
  $('#c_cash').on('keyup',function(){
    var c_balance=$('#c_balance').val()
    var c_cash = $('#c_cash').val()
    var c_remaining_balance = parseInt(c_balance)+parseInt(c_cash)
    $('#c_remaining_balance').val(c_remaining_balance)
  })
  $( "#account_id" ).on('keyup', function(){
    var parameter = {customer_id: $(this).val()}
    $.get( '/getCusPayments',parameter, function(data) {
      if(data.length > 0){
        $('#name').val(data[0].name)
        $('#cast').val(data[0].cast)
        $('#number').val(data[0].number)
        $('#cnic').val(data[0].cnic)
        $('#address').val(data[0].address)
        $('#balance').val(data[0].debit)
      }else{
        $('#name').val("")
        $('#cast').val("")
        $('#number').val("")
        $('#cnic').val("")
        $('#address').val("")
        $('#balance').val("")
      }
    })
  }) 
  $( "#c_account_id" ).on('keyup', function(){
    var parameter = {customer_id: $(this).val()}
    $.get( '/getCusPayments',parameter, function(data) {
      if(data.length > 0){
        $('#c_name').val(data[0].name)
        $('#c_cast').val(data[0].cast)
        $('#c_number').val(data[0].number)
        $('#c_cnic').val(data[0].cnic)
        $('#c_address').val(data[0].address)
        $('#c_balance').val(data[0].debit)
      }else{
        $('#c_name').val("")
        $('#c_cast').val("")
        $('#c_number').val("")
        $('#c_cnic').val("")
        $('#c_address').val("")
        $('#c_balance').val("")
      }
    })
  }) 
  });

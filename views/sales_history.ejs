<script type="text/javascript" src="/public/js/printThis.js"></script>
    <script>
    $(function () {
    $("#table").DataTable({
      order: [ 0, 'desc' ],
      "footerCallback": function ( row, data, start, end, display ) {
				var api = this.api();
				nb_cols = api.columns().nodes().length;
				var j = 14;
				while(j < nb_cols){
					var pageTotal = api
                .column( (j == 4)?"":j, { page: 'current'} )
                .data()
                .reduce( function (a, b) {
                    return Number(a) + Number(b);
                }, 0 );
          $( api.column( j ).footer() ).html(pageTotal);
					j++;
				} 
			}
    });
    $.get( '/getSalesHistory', function(data) {
      if(data.length > 0){
        $.each(data, function(index){
          $('#table').DataTable().row.add([
            "",
            data[index].serial_number,
            moment(data[index].order_dateTime).format("DD/MM/YYYY"),
            data[index].name,
            data[index].cnic,
            data[index].number,
            data[index].address,
            data[index].brand, 
            data[index].model,
            data[index].motor_type,
            data[index].cc,
            data[index].color, 
            data[index].engine_number,
            data[index].chasis_number,
            data[index].total_price
          ]).draw();
        })
      }
    })
    $('#print').click(function(){
      $( function () {
        $('#table').printThis({
          importCSS: true,
          importStyle: true,
          printContainer: true,
          removeInline: false, 
          removeInlineSelector: "*",
          header: $('.card-title').text(),
          footer: null, 
          base: false
        });
      });
    })
  });
	</script>

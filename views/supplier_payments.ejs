                  <form action="/saveSupplierPayments" method="POST" autocomplete="off">
                  <div class="card-body">
                      <h2>Supplier Payment</h2>
                      <div class="row">
                        <div class="col-sm-4">
                          <div class="form-group">
                              <label>Account Name</label>
                              <div class="input-group">
                                <select class="form-control" id="company_name" name="company_name" required>
                                  <option value="" selected disabled>Select Company Name</option>
                                </select>
                              </div>
                          </div>
                        </div>
                        <div class="col-sm-4">
                          <div class="form-group">
                              <label>Number</label>
                              <div class="input-group">
                                <input type="number" class="form-control" name="number" id="number" readonly required/>
                              </div>
                          </div>
                        </div>
                          <div class="col-sm-4">
                            <div class="form-group">
                                <label>Address</label>
                                <div class="input-group">
                                  <input type="text" class="form-control" name="address" id="address" readonly required/>
                                </div>
                            </div>
                          </div>
                          <div class="col-sm-4">
                            <div class="form-group">
                                <label>Pay Date:</label>
                                <div class="input-group">
                                  <input type="text" class="form-control" id="date" readonly required/>
                                </div>
                            </div>
                          </div>
                          <div class="col-sm-4">
                            <div class="form-group">
                                <label>Description</label>
                                <div class="input-group">
                                  <input name="description" type="text" class="form-control" required />
                                </div>
                            </div>
                          </div>
                          <div class="col-sm-4">
                            <div class="form-group">
                                <label>Balance</label>
                                <div class="input-group">
                                  <input type="number" id="balance" name="balance" class="form-control" readonly required/>
                                </div>
                            </div>
                          </div>
                          <div class="col-sm-4">
                            <div class="form-group">
                                <label>Cash</label>
                                <div class="input-group">
                                  <input type="number" id="cash" name="cash" placeholder="RS" class="form-control" required />
                                </div>
                            </div>
                          </div>
                          <div class="col-sm-4">
                            <div class="form-group">
                                <label>Remaining Balance</label>
                                <div class="input-group">
                                  <input type="number" id="remaining_balance" name="remaining_balance" class="form-control" required readonly/>
                                </div>
                            </div>
                          </div>
                      </div>
                  </div>
                  <div class="card-header bg-info">
                    <div  align="center">

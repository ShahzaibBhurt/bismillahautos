    <script>
    $(function () {
      var d = new Date();
    var month = d.getMonth()+1;
    var day = d.getDate();
    var output = ((''+day).length<2 ? '0' : '') + day+'/'+
    ((''+month).length<2 ? '0' : '') + month + '/' + d.getFullYear();
    $('#date').val(output)
    $('#cash').on('keyup',function(){
    var balance=$('#balance').val()
    var cash = $('#cash').val()
    var remaining_balance = (balance-cash)
    $('#remaining_balance').val(remaining_balance)
  })
      $.get( '/CompanyList', function(data) {
      if(data.length > 0){
        $.each(data, function(index){
          $('#company_name').append(
          "<option value='"+data[index].brand_name+"'>"+data[index].brand_name+"</option>")
        })
      }
    })
    $('#company_name').change(()=>{
      var parameter = {company_name: $('#company_name').val()}
    $.get( '/getCompanyDetails',parameter, function(data) {
      if(data.length > 0){
        $('#number').val(data[0].number)
        $('#address').val(data[0].address)
        $('#balance').val(data[0].credit)
      }
    })
    })
  });
	</script>

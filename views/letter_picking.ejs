<script src="/public/js/moment.min.js"></script>
<script>
    $(function () {
      $('#engineNumber').keyup(function(){
        var s_number = $(this).val()
        var parameter = {engine_number: s_number}
        $.get( '/getLeterDetails',parameter, function(data) {
          if(data.length > 0){
            $('#date').val(moment(data[0].order_dataTime).format("DD/MM/YYYY, hh:mm"))
            $('#customerId').val(data[0].serial_number)
            $('#name').val(data[0].name)
            $('#cnic').val(data[0].cnic)
            $('#brand').val(data[0].brand)
            $('#model').val(data[0].model)
            $('#color').val(data[0].color)
            $('#engine_number').val(data[0].engine_number)
            $('#chasis_number').val(data[0].chasis_number)
            $('#letter_status').text((data[0].letter_status != null)? 'Letter Picked':"Letter Not Picked")
            $('#letter_status').trigger("change")
          }else{
            $('#date').val('')
            $('#customerId').val('')
            $('#name').val('')
            $('#cnic').val('')
            $('#brand').val('')
            $('#model').val('')
            $('#color').val('')
            $('#engine_number').val('')
            $('#chasis_number').val('')
            $('#letter_status').text('')
          }
        })
        $('#letter_status').bind("change paste input", function(){
          var uploads = document.getElementById('uploads')
          var status = $(this).text()
          if(status == 'Letter Picked'){
            uploads.innerHTML = '<button type="button" class="btn btn-secondary"data-toggle="modal" data-target="#UploadsModal" id="uploadsBtn">See Uploads</button>'
          }else{
            uploads.innerHTML = '<label>Upload Documents</label>'+
              '<div class="custom-file">'+
                  '<input type="file" class="custom-file-input" name="files" id="images" multiple required>'+
                  '<label class="custom-file-label" for="images">Choose files</label>'+
              '</div>'+
              '<p id="error" style="color:red"></p>'
          }
          $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            $('#submitBtn').removeAttr('disabled')
          });
          $('#images').change(function(){
            if(this.files.length > 3){
              $("#form").submit(function(e){
                e.currentTarget.submit();
              })
              $('#error').text('')
            }else{
              $("#form").submit(function(e){
                e.preventDefault()
              })
              $('#error').text('Please select minimum 4 images')
            }
          })
          var body = document.getElementById('uploads-modal-body')
          $('#uploadsBtn').on('click', function(){
            body.innerHTML = ''
            $('#loading').removeAttr('class')
            var en = $('#engine_number').val()
            $.get('/images', {en: en}, (data)=>{
              if(data.length > 0){
                for(var i=0;i<data.length; i++){
                  var div = document.createElement('div')
                  div.className = 'col-xl-3 col-sm-4'
                  var img = document.createElement('img')
                  img.src = 'data:image/png;base64,'+data[i]
                  img.className = 'img-fluid'
                  div.appendChild(img)
                  body.appendChild(div)
                }
                $('#loading').attr('class', 'd-none')
              }
            })
          })
        })
      })
    });
  </script>
